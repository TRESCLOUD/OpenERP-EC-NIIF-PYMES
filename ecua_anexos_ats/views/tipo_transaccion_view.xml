<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="sri_transaction_usage_tree_view">
			<field name="name">sri.transaction.usage.tree</field>
			<field name="model">sri.transaction.usage</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Uso de Transacción">
					<field name="code" />
					<field name="name" />
					<field name="type_identification" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="sri_transaction_usage_form_view">
			<field name="name">sri.transaction.usage.form</field>
			<field name="model">sri.transaction.usage</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Uso de Transacción">
					<field name="code" readonly="1" />
					<field name="name" readonly="1" />
					<field name="type_identification" readonly="1" />
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="sri_transaction_usage_search_view">
			<field name="name">sri.transaction.usage.form</field>
			<field name="model">sri.transaction.usage</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Uso de Transacción">
					<field name="code" />
					<field name="name" />
				</search>
			</field>
		</record>

	</data>
</openerp>